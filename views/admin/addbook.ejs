<% include ../header.ejs %>
  <div class="container">
    <div id="categoryform" class="form-div z-depth-2">
    <h3 class="center-align">Book Category</h3>
    <form class="col s12" action="/admin/addbook" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <input id="title" type="text" name="title" class="validate" placeholder="Enter the title of the book">
          <label for="title">Title</label>
        </div>
      </div><! -- Book Title -->
      <div class="row">
        <div class="input-field col s12">
          <input id="author" type="text" name="author" class="validate" placeholder="Enter the author of the book">
          <label for="author">Author</label>
        </div>
      </div><! -- Book Author -->
      <div class="row">
        <div class="input-field col s12">
          <textarea id="description" name="description" class="validate materialize-textarea" placeholder="Enter a brief description of the book"></textarea>
          <label for="description">Description</label>
        </div>
      </div><! -- Book Description -->
      <div class="row">
        <div class="input-field col s12">
          <input id="isbn" type="number" name="isbn" class="validate" placeholder="Enter the ISBN number of the book">
          <label for="isbn">ISBN</label>
        </div>
      </div><! -- Book ISBN -->
      <div class="row">
        <div class="input-field col s12">
          <select id="category" name="category" class="validate">
            <option value="" disabled selected>Choose your option</option>
            <% for (key in categories) { %>
            <option value="<%= categories[key].name %>"><%= categories[key].name %></option>
            <% } %>
          </select>
          <label for="category">Category</label>
        </div>
      </div><! -- category id -->
      <div class="row">
        <div class="input-field col s12">
          <input id="quantity" name="quantity" type="number" placeholder="Enter the quantity of the book" class="validate"> 
          <label for="quantity">Quantity</label>
        </div>
      </div><! --category quantity -->
      <div class="row">
        <div class="center">
          <button class="btn waves-effect waves-light" id="login" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
        </div><! -- Button Div -->
      </div>
    </form>
  </div>
  </div>
<% include ../footer.ejs %>