<% include ../header.ejs %>
  <div class="container">
    <div class="form-div z-depth-2">
      <h3 class="center-align">Edit Book</h3>
      <form class="col s12" action="/admin/book/<%= post.title %>" method="POST">
        <div class="row">
          <div class="input-field col s12">
            <input id="title" type="text" name="title" class="validate" value="<%= post.title %>">
            <label for="title">Title</label>
          </div>
        </div><! -- Book Title -->
        <div class="row">
          <div class="input-field col s12">
            <input id="author" type="text" name="author" class="validate" value="<%= post.author %>">
            <label for="author">Author</label>
          </div>
        </div><! -- Book Author -->
        <div class="row">
          <div class="input-field col s12">
            <textarea id="description" name="description" class="validate materialize-textarea"><%= post.description %></textarea>
            <label for="description">Description</label>
          </div>
        </div><! -- Book Description -->
        <div class="row">
          <div class="input-field col s12">
            <input id="isbn" type="number" name="isbn" class="validate" value="<%= post.isbn %>">
            <label for="isbn">ISBN</label>
          </div>
        </div><! -- Book ISBN -->
        <div class="row">
          <div class="input-field col s12">
            <input id="key" type="hidden" name="bookId" value="<%= post.key %>" >
          </div>
        </div><! -- Book Key -->
        <div class="row">
          <div class="input-field col s12">
            <select id="category" name="category" class="validate">
              <option value="" disabled selected>Choose your option</option>
              <% for (key in categories) { %>
              <option value="<%= categories[key].name %>"><%= categories[key].name %></option>
              <% } %>
            </select>
            <label for="category">Category</label>
          </div>
        </div><! -- category id -->
        <div class="row">
          <div class="input-field col s12">
            <input id="quantity" name="quantity" type="number" value="<%= post.quantity %>" class="validate"> 
            <label for="quantity">Quantity</label>
          </div>
        </div><! --category quantity -->
        <div class="row">
          <div class="center">
            <button class="btn waves-effect waves-light" id="login" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
            <a class="btn waves-effect waves-light disabled" href="/admin/books"  name="action">Go back
              <i class="material-icons right">back</i>
            </a>
          </div>
        </div><! -- Button Div -->
      </form>
    </div><! -- Book Form -->
  </div>
<% include ../footer.ejs %>