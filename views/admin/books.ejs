<% include ../header.ejs %>
  <div class="container">
    <h4 class="center-align">These are the list of books in the library</h4>
    <div class="row">
        <a class="btn waves-effect waves-light brown" id="addbook"><i class="material-icons left">add</i>Add a Book</a>
    </div>
    <div id="books">
      <div class="row">
        <% if (books === null) { %>
            <p class="flow-text center-align"> You have not added any book, click the button above to create one </p>
          <% } else { %>
          <% for (key in books) { %>
            <div class="col s12 m3">
              <div class="card lime lighten-1">
                <div class="card-image waves-effect waves-block waves-light">
                  <img class="activator" src="/images/office.png" width="50" height="100">
                </div>
                <div class="card-content">
                  <span class="card-title activator grey-text text-darken-4"><%= books[key].title %><i class="material-icons right">more_vert</i></span>
                  <p>Author : <%= books[key].author %> </p>
                  <p>ISBN : <%= books[key].isbn %> </p>
                  <p><a href="/admin/book/<%= books[key].title %>">Edit this Book</a></p>
                </div>
                <div class="card-reveal">
                  <span class="card-title grey-text text-darken-4"><%= books[key].title %><i class="material-icons right">close</i></span>
                  <p>Quantity : <%= books[key].quantity %></p>
                  <p>Description : </p>
                  <p> <%= books[key].description %></p>
                </div>
              </div>
            </div><! -- col div -->
          <% }} %>
      </div>
    </div>
    <div id="bookform" class=" hidden form-div z-depth-2">
      <h3 class="center-align">Create a Book</h3>
      <form class="col s12" action="/admin/addbook" method="POST">
        <div class="row">
          <div class="input-field col s12">
            <input id="title" type="text" name="title" class="validate" placeholder="Enter the title of the book">
            <label for="title">Title</label>
          </div>
        </div><! -- Book Title -->
        <div class="row">
          <div class="input-field col s12">
            <input id="author" type="text" name="author" class="validate" placeholder="Enter the author of the book">
            <label for="author">Author</label>
          </div>
        </div><! -- Book Author -->
        <div class="row">
          <div class="input-field col s12">
            <textarea id="description" name="description" class="validate materialize-textarea" placeholder="Enter a brief description of the book"></textarea>
            <label for="description">Description</label>
          </div>
        </div><! -- Book Description -->
        <div class="row">
          <div class="input-field col s12">
            <input id="isbn" type="number" name="isbn" class="validate" placeholder="Enter the ISBN number of the book">
            <label for="isbn">ISBN</label>
          </div>
        </div><! -- Book ISBN -->
        <div class="row">
          <div class="input-field col s12">
            <select id="category" name="category" class="validate">
              <option value="" disabled selected>Choose your option</option>
              <% for (key in categories) { %>
              <option value="<%= categories[key].name %>"><%= categories[key].name %></option>
              <% } %>
            </select>
            <label for="category">Category</label>
          </div>
        </div><! -- category id -->
        <div class="row">
          <div class="input-field col s12">
            <input id="quantity" name="quantity" type="number" placeholder="Enter the quantity of the book" class="validate"> 
            <label for="quantity">Quantity</label>
          </div>
        </div><! --category quantity -->
        <div class="row">
          <div class="center">
            <button class="btn waves-effect waves-light" id="login" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
            <a class="btn waves-effect waves-light disabled" id="bookback"  name="action">Go back
              <i class="material-icons right">back</i>
            </a>
          </div>
        </div><! -- Button Div -->
      </form>
    </div><! -- Book Form -->
  </div>
<% include ../footer.ejs %>