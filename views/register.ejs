<% include header.ejs %>
<div class="container">
  <div class="form-div z-depth-2">
    <h3 class="center-align">Registration Form</h3>
    <form class="col s12" action="/auth/signup" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <input id="name" type="text" name="name" class="validate" placeholder="Input your firstname and lastname with a space within">
          <label for="name">Name</label>
        </div>
      </div><! -- name-->
      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" name="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div><! -- email row -->
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" name="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div><! -- password row -->
      <div class="row">
        <div class="center">
          <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
    </form>
  </div>
</div><! -- form-container -->
<% include footer.ejs %>